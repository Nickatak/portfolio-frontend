{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/Nickatak/portfolio-notifier-contracts/schemas/events/appointments.created.dlq.schema.json",
  "title": "appointments.created.dlq",
  "description": "Represents a failed appointments.created processing attempt.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "event_type",
    "original_event_type",
    "failed_at",
    "reason",
    "payload"
  ],
  "properties": {
    "event_type": {
      "const": "appointments.created.dlq"
    },
    "original_event_type": {
      "const": "appointments.created"
    },
    "failed_at": {
      "type": "string",
      "format": "date-time"
    },
    "reason": {
      "type": "string",
      "minLength": 1
    },
    "payload": {
      "$ref": "./appointments.created.schema.json"
    }
  }
}
