# ---------- Frontend (build-time NEXT_PUBLIC_*) ----------
# Replace with your actual Google Client ID from https://console.cloud.google.com/
NEXT_PUBLIC_GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_HERE
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_DISPLAY_NAME=Your Name
NEXT_PUBLIC_CONTACT_EMAIL=your.email@example.com

# ---------- Docker Compose / Ports ----------
PORTFOLIO_PORT=3000
CALENDAR_API_PORT=8000
PORTFOLIO_CONTEXT=./frontend
CALENDAR_CONTEXT=./backend
PORTFOLIO_DOCKERFILE=Dockerfile
CALENDAR_DOCKERFILE=Dockerfile

# ---------- Backend runtime ----------
SECRET_KEY=django-insecure-dev-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
TIME_ZONE=UTC
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ---------- Kafka producer (calendar_api -> notifier worker) ----------
# Local backend (run with `make backend`) should use localhost:9092.
KAFKA_PRODUCER_ENABLED=False
KAFKA_NOTIFY_EMAIL_DEFAULT=True
KAFKA_NOTIFY_SMS_DEFAULT=False
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_BOOTSTRAP_SERVERS_DOCKER=kafka:19092
KAFKA_TOPIC_APPOINTMENTS_CREATED=appointments.created
KAFKA_TOPIC_APPOINTMENTS_CREATED_DLQ=appointments.created.dlq
